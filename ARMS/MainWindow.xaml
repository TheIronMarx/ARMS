        <Label Canvas.Left="6" Canvas.Top="429" Content="Label" Height="28" Name="labelSpeech" FontSize="14" Width="590" FontFamily="Lucida Console" FontWeight="Bold" Foreground="White" Margin="170,532,18,0" />
