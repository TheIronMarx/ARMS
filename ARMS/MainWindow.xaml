        <Label Content="Color" FontFamily="Lucida Console" FontSize="26" FontWeight="Bold" Foreground="White" Height="51" HorizontalAlignment="Left" Margin="12,168,0,0" Name="labelColor" VerticalAlignment="Top" Width="114" />
